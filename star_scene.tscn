script/source = "extends Area2D

@export var collect_radius: float = 8.0   # в world-пикселях, подгоняй под коллайдер
signal collected()

func _ready():
	# Сигнал при попадании тела (например шарик — RigidBody2D)
	body_entered.connect(_on_body_entered)

func _on_body_entered(body: Node) -> void:
	# Если это наш шар — эмитим сигнал и удаляем/скрываем звезду
	# Подставь условие под имя/тип твоего шарика, например: body.name == \"Ball\" или body is RigidBody2D
	if body == null:
		return
	# Пример: если шар — RigidBody2D (или по имени)
	if body is RigidBody2D:
		emit_signal(\"collected\")
		queue_free()
"

